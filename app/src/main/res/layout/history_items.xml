<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="horizontal"
    android:background="@drawable/line_history"
    >
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/start"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >
        <ImageView
            android:id="@+id/countryIconFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_flag_circle_24"
            android:layout_margin="3dp"

            />
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/translationFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:textSize="16sp"
            android:text="Pakistan"/>


    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/countryIconTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_flag_circle_24"
            android:layout_margin="3dp"

            />
        <TextView
            android:id="@+id/translationTo"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey3"
            android:layout_margin="3dp"
            android:textSize="16sp"
            android:text="Pakistan"/>


    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_history_24"/>
    </LinearLayout>
</LinearLayout>